extends layout

block content
  h1= device.name
  div(id='edit')
    h2 Edit Device
    form(method='PUT' action='/devices/' + device.id)
      div
        label(for='name') Name:
        |  
        input#name(type='text', value=device.name name='name' required)
      |  &nbsp
      div
        label(for='type') Type:
        |  
        select#type(name='type' required)
          option(value='light' selected=device.type == 'light') Light
          option(value='sensor' selected=device.type == 'sensor') Sensor
      |  &nbsp
      div
        label(for='location') Location:
        |  
        select#location(name='location' required)
          option(value='living-room' selected=device.location == 'living-room') Living Room
          option(value='kitchen' selected=device.location == 'kitche') Kitchen
          option(value='foyer' selected=device.location == 'foyer') Foyer
          option(value='garage' selected=device.location == 'garage') Garage
          option(value='main-bathroom' selected=device.location == 'main-bathroom') Main Bathroom
          option(value='chris-room' selected=device.location == 'chris-room') Chris's Bedroom
          option(value='matt-room' selected=device.location == 'matt-room') Matt's Bedroom
          option(value='kevin-room' selected=device.location == 'kevin-room') Kevin's Bedroom
          option(value='kevin-bathroom' selected=device.location == 'kevin-bathroom') Kevin's Bathroom
      |  &nbsp
      div
        label(for='localIp') Local IP Address:
        |  
        input#localIp(type='text' value=device.localIp name='localIp' required)
      |  
      br
      button(type='submit') Update Device
