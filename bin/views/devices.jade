extends layout

block content
  h1= title
  div(id='list')
    h2 Device List
    table
      tr
        th Name
        th Type
        th Location
        th Local IP Address
      each device in devices
        tr
          td= device.name
          td= device.type
          td= device.location
          td= device.localIp
          td
            form(method='GET', action='/devices/' + device.id)
              button(type='submit') Edit
          td
            form(method='DELETE', action='/devices/' + device.id, onsubmit="return confirm('Are you sure you want to delete this device?');")
              button(type='submit') Delete
  | &nbsp;
  hr
  div(id='add')
    h2 Add New Device
    form(method='POST' action='/devices')
      div
        label(for='name') Name:
        |  
        input#name(type='text', placeholder='Device Name' name='name' required)
      |  &nbsp
      div
        label(for='type') Type:
        |  
        select#type(name='type' required)
          option(value='' disabled selected) -- Select --
          option(value='light') Light
          option(value='sensor') Sensor
      |  &nbsp
      div
        label(for='location') Location:
        |  
        select#location(name='location' required)
          option(value='' disabled selected) -- Select --
          option(value='living-room') Living Room
          option(value='kitchen') Kitchen
          option(value='foyer') Foyer
          option(value='garage') Garage
          option(value='main-bathroom') Main Bathroom
          option(value='chris-room') Chris's Bedroom
          option(value='matt-room') Matt's Bedroom
          option(value='kevin-room') Kevin's Bedroom
          option(value='kevin-bathroom') Kevin's Bathroom
      |  &nbsp
      div
        label(for='localIp') Local IP Address:
        |  
        input#localIp(type='text' name='localIp' required)
      |  
      br
      button(type='submit') Add Device
